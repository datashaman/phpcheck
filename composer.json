{
    "name": "datashaman/phpcheck",
    "description": "PHP implementation of Haskell's QuickCheck.",
    "type": "library",
    "keywords": [
        "testing"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Marlin Forbes",
            "email": "marlinf@datashaman.com"
        }
    ],
    "prefer-stable": true,
    "require": {
        "php": "^7.2",
        "ext-ds": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "ext-mbstring": "*",
        "ext-sqlite3": "*",
        "ext-xml": "*",
        "ext-xmlwriter": "*",
        "erusev/parsedown": "^1.7",
        "fzaninotto/faker": "^1.8",
        "icecave/repr": "^1.0",
        "nikic/php-parser": "^4.2",
        "nunomaduro/collision": "^3.0",
        "phpdocumentor/reflection-docblock": "^4.3",
        "phpunit/php-code-coverage": "^7.0",
        "pimple/pimple": "~3.0",
        "savvot/random": "^0.3.0",
        "symfony/console": "^4.2",
        "symfony/event-dispatcher": "^4.2",
        "symfony/finder": "^4.2",
        "symfony/var-dumper": "^4.2",
        "vlucas/phpdotenv": "^3.3",
        "webmozart/assert": "^1.4"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.3",
        "cache/redis-adapter": "^1.0",
        "friendsofphp/php-cs-fixer": "^2.14",
        "knplabs/github-api": "^2.11",
        "php-http/guzzle6-adapter": "^1.1",
        "phpmd/phpmd": "^2.6",
        "phpstan/phpstan": "^0.11.5",
        "phpunit/phpunit": "^8.1",
        "symfony/templating": "^4.2"
    },
    "suggest": {
        "ext-simplexml": "Enables JUnit XML report"
    },
    "config": {
        "platform": {
            "php": "7.2.0"
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "bin": [
        "bin/phpcheck"
    ],
    "autoload": {
        "files": [
            "src/helpers.php",
            "src/bootstrap.php",
            "src/generators.php"
        ],
        "psr-4": {
            "Datashaman\\PHPCheck\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Datashaman\\PHPCheck\\Checks\\": "checks/",
            "Datashaman\\PHPCheck\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "bin": "echo 'bin not installed'",
        "post-install-cmd": ["@composer bin all install --ansi"],
        "post-update-cmd": ["@composer bin all update --ansi"]
    }
}
